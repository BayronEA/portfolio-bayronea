---
import About from './sections/about/about.astro';
import Contact from './sections/contact/contact.astro';
import Hero from './sections/hero/hero.astro';
import Portfolio from './sections/portfolio/portfolio.astro';
---

	<main>
	
		<section id='inicio' class="relative w-full min-h-screen mx-auto overflow-hidden flex items-center">
			<div class="absolute -z-10 inset-0 "></div>
			<div class="absolute -z-10 inset-0 "></div>
			<div class="mx-auto px-4 sm:px-6 lg:px-8 w-full max-w-7xl flex flex-row items-start justify-center gap-5">
				<div class="w-full h-full flex flex-row justify-center items-center mt-auto gap-10">
					<Hero/>

				</div>
			</div>
		</section>
		
		<section id="sobremi">
			<div id="about" class="w-full min-h-screen py-4 sm:py-8 relative">
				<div class="absolute -z-10 inset-0 "></div>
				<div class="absolute -z-10 inset-0 "></div>
				<div class="max-w-7xl mx-auto px-6 sm:px-8 md:px-10 mt-20 sm:mt-8 md:mt-12">
					<About />
				</div>
			 </div>
		</section>
		<section id="portafolio">
			<Portfolio />
		</section>
		<section id="contacto">
			<Contact/>
		</section>


	</main>
