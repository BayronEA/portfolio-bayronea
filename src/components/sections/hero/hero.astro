---
import codigIlustration from '../../../media/coding-illustration.webm';
import { FlechaDiagonal, Github, LinkedIn, VerMiTrabajo } from '../../icons/index.ts';

---
<div class="w-auto lg:w-full flex flex-col p-3 sm:p-0 gap-8">
    <div class="inline-flex animate-float lg:mx-0">
        <div class="relative group">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-[#6366f1] to-[#a855f7] rounded-full blur opacity-30 group-hover:opacity-50 transition duration-1000"></div>
            <div class="relative px-3 sm:px-4 py-2.5 rounded-full dark:bg-black/40 backdrop-blur-xl border border-white/10">
                <span class="bg-gradient-to-r from-[#6366f1] to-[#a855f7] text-transparent bg-clip-text px-2 sm:text-sm text-base font-medium flex items-center">
                    <span class="w-3 h-3 mr-2 rounded-full animate-pulse bg-cyan-500"></span>
                    Listo para programar
                </span>
            </div>
        </div>
    </div>
    <h1 class="flex flex-col text-5xl sm:text-6xl md:text-6xl lg:text-6xl xl:text-7xl font-bold tracking-tight">
        <span class="relative w-max">
            <span class="absolute -inset-2 bg-gradient-to-r from-[#6366f1] to-[#a855f7] blur-2xl opacity-20"></span>
            <span class="relative bg-gradient-to-r dark:from-white dark:via-blue-100 dark:to-purple-200 text-text-light_secondary bg-clip-text dark:text-transparent">Wayroon</span>
        </span>
        <span class="relative w-max mt-2">
            <span class="absolute -inset-2 bg-gradient-to-r from-[#6366f1] to-[#a855f7] blur-2xl opacity-20"></span>
            <span class="relative bg-gradient-to-r from-[#6366f1] to-[#a855f7] bg-clip-text text-transparent">Estrada</span>
        </span>
    </h1>
    <p class="dark:text-primary-foreground text-primary-light-foreground text-pretty md:text-lg text-base max-w-lg">Creaci√≥n de aplicativos web modernos, eficientes y atractivos, listos para escalar y resolver problemas reales desde el navegador hasta el servidor.
    </p>
    <div class="flex gap-4" style="opacity: 1; transform: none;">
        <a href="https://www.linkedin.com/in/wayroon-miguel-estrada-arias-aa99a9166/" target="_blank" rel="noopener noreferrer" role="link" aria-label="linkedin link">
            <button type="button" name="social-link-button" role="button" aria-label="linkedin link" class="group relative p-3 cursor-pointer">
                <div class="absolute inset-0 bg-gradient-to-r from-[#6366f1] to-[#a855f7] rounded-xl blur opacity-20 group-hover:opacity-40 transition duration-300"></div>
                <div class="relative rounded-xl text-text-light dark:text-white bg-light-foreground/10 shadow-xs hover:bg-light-foreground dark:hover:bg-dark-light/50 backdrop-blur-xl p-2 flex items-center justify-center border border-white/10 transition-colors duration-300">
                    <LinkedIn />
                </div>
            </button>
        </a>
        <a href="https://github.com/BayronEA" target="_blank" rel="noopener noreferrer" role="link" aria-label = "github link">
        <button type="button" name = "social-link-button" role = "button" aria-label = "github link" class = "group relative p-3 cursor-pointer">
            <div class = "absolute inset-0 bg-gradient-to-r from-[#6366f1] to-[#a855f7] rounded-xl blur opacity-20 group-hover:opacity-40 transition duration-300"></div>
            <div class = "relative rounded-xl text-text-light dark:text-white bg-light-foreground/10 shadow-xs hover:bg-light-foreground dark:hover:bg-dark-light/50 backdrop-blur-xl p-2 flex items-center justify-center border border-white/10 transition-colors duration-300">
                <Github />
            </div>
        </button>
        </a>
    </div>
    <div class="flex flex-wrap items-center gap-6 sm:gap-4">
        <div class="flex" style="opacity: 1; transform: none;">
            <button type="button" name="view-portfolio" class="flex gap-3 items-center h-10 sm:h-12 py-3 px-6 sm:px-8 text-sm sm:text-base bg-linear-to-r dark:from-[#6366f1] dark:to-[#a855f7] from-accent-light-purple to-accent-light-blue text-white font-bold rounded-full shadow-lg hover:shadow-purple-500/25 transition-colors duration-300 transform hover:scale-105">
                <a href="#proyectos" class="flex gap-3 items-center">
                    <VerMiTrabajo/>
                    Ver mi trabajo
                </a>
            </button>
        </div>
        <div class="flex" style="opacity: 1; transform: none;">
            <div class="p-0.5 bg-gradient-to-r from-[#6366f1] to-[#a855f7] rounded-full shadow-lg hover:shadow-purple-500/25 transition-colors duration-300 transform hover:scale-105">
                <button type="button" name="contact-me" class="w-full h-10 sm:h-12 px-6 sm:px-8 text-sm sm:text-base bg-dark-background text-white font-bold rounded-full flex items-center justify-center gap-3 border border-white/10">
                    <a href='#contacto' class="flex gap-3 items-center"> 
                    <FlechaDiagonal/>
                        Ponte en contacto
                    </a>
                    </button>
            </div>
        </div>
    </div>
</div>

<div class="hidden lg:flex items-center justify-end">
    <div class="w-64 h-64 sm:w-[300px] sm:h-[300px] md:w-[520px] md:h-[520px] relative">
        <div class="absolute w-full h-full rounded-full bg-linear-to-br dark:from-accent-purple dark:to-accent-blue from-accent-light-purple to-accent-light-blue opacity-20 blur-2xl animate-pulse"></div>
        <div class="w-full h-full flex items-center justify-center relative z-10">
            <div class="w-full h-full rounded-lg relative overflow-hidden">
                <video class="w-full h-[110%] object-cover object-[center_-20px]" autoplay loop muted playsinline>
                    <source src={codigIlustration} type="video/webm">
                </video>
                <div class="absolute inset-0 bg-linear-to-br dark:from-accent-purple/20 dark:to-accent-blue/20 from-accent-light-purple/20 to-accent-light-blue/20 mix-blend-overlay"></div>
            </div>
        </div>
    </div>
</div>

